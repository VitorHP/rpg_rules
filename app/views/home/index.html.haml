
%section#systems-section{ ng_controller: "SystemsCtrl" }
  %form.form-horizontal{ ng_submit: "addSystem()" }
    %input{ type: "text", placeholder: "Novo Sistema", ng_model: "newSystem.name", required: "" }
    %input{ type: "submit", class: "btn", value: "Add" }

  %ul.systems-list
    %li.system{ ng_repeat: "system in systems" }
      %span.system-name {{system.name}}
      %ul.books-list
        %li.book{ ng_repeat: "book in system.books" }
          = link_to "{{book.name}}", "#/books/{{book.id}}/rules"

%section#rules-section{ ng_controller: "RulesCtrl" }
  .view{ ng_view: "" }
